<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainMenuActivity"
    android:orientation="vertical"

    android:background="@drawable/lightformain">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#00000000"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topPart"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:background="@drawable/plant">


        <include
            android:id="@+id/date_for_fragment_home_id"
            layout="@layout/date_for_fragment_home"
            android:layout_width="130dp"
            android:layout_height="180dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <LinearLayout
                android:id="@+id/home"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_border"
                android:layout_marginBottom="20dp"
                android:weightSum="2"
                android:gravity="center"
                >
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_border_brown"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/home_new"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="2"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activity Page"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:textColor="#664F38"
                        android:textStyle="bold"/>


                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:id="@+id/statistics"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_border"
                android:layout_marginBottom="20dp"
                android:weightSum="2"
                android:gravity="center"
                >
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_border_brown"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/stats"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="2"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Statistics"
                        android:textSize="30sp"
                        android:textColor="#664F38"
                        android:gravity="center"
                        android:textStyle="bold"/>


                </LinearLayout>




            </LinearLayout>



            <LinearLayout
                android:id="@+id/journalHistory"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_border"
                android:layout_marginBottom="20dp"
                android:weightSum="2"
                android:gravity="center"
                >
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_border_brown"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/journal"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="2"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Journal History"
                        android:textSize="30sp"
                        android:textColor="#664F38"
                        android:gravity="center"
                        android:textStyle="bold"/>


                </LinearLayout>




            </LinearLayout>







        </LinearLayout>


    </LinearLayout>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/whiteborder"
        >





    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>