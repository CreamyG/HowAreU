<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/slide_images"
        android:layout_width="249dp"
        android:layout_height="183dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/home" />

    <TextView
        android:id="@+id/slide_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slide_images"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Heading"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/slide_decs"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slide_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text=" Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin tincidunt bibendum quam, vel vestibulum risus sagittis nec. Quisque pellentesque purus et quam imperdiet convallis. Integer interdum blandit nisi, varius rhoncus quam. Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas."
        android:textSize="16sp" />
</RelativeLayout>

