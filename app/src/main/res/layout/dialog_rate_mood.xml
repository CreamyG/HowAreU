<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rounded_corner_white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Select A Mood"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:textColor="#664F38"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/btnExit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="RateMood"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/reject"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/rounded_border_very_happy"
            >
            <ImageView
                android:id="@+id/btnVeryHappy"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="Sad"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/very_happy2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="Very Happy" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/rounded_border_happy"
            android:layout_marginLeft="5dp"
            >
            <ImageView
                android:id="@+id/btnHappy"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:text="Sad"
                app:srcCompat="@drawable/happy2"/>

            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10sp"
                android:text="Happy" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/rounded_border_neutral"
            android:layout_marginLeft="5dp"
            >

            <ImageView
                android:id="@+id/btnNeutral"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:text="Sad"
                app:srcCompat="@drawable/neutral2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:textSize="10sp"
                android:text="Neutral" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/rounded_border_sad"
            android:layout_marginLeft="5dp"
            >
            <ImageView
                android:id="@+id/btnSad"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="Sad"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/sad2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:textSize="10sp"
                android:text="Sad" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/rounded_border_very_sad"
            android:layout_marginLeft="5dp"
            >

            <ImageView
                android:id="@+id/btnVerySad"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="RateMood"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/very_sad2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Very Sad"
                android:textSize="10sp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                />

        </LinearLayout>



    </LinearLayout>






</LinearLayout>